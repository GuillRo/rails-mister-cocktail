<div class="container">
  <h1><%= @cocktail.name%></h1>
    <% @doses.each do |dose|%>
    <p>
      <%= "#{dose.description} of #{dose.ingredient.name}"%>
      <%= link_to dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt"></i>
      <% end %>
    </p>
    <% end %>
    <p>
      <%= link_to "Back to list", cocktails_path %>
    </p>
    <p>
      <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
    </p>
</div>